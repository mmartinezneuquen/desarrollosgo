
.wrapper{
    max-width: 700px;
    position: absolute
}
.nav-arrows a,.sb-description{display: none}
.wrapper:hover .nav-arrows a, .wrapper:hover .sb-description{display: block}
.nav-arrows a {
	width: 42px;
	height: 42px;
	background:  url(../images/nav.png) no-repeat top left;
	position: absolute;
	top: 50%;
	left: 2px;
	text-indent: -9000px;
	cursor: pointer;
	margin-top: -21px;
	opacity: 0.9;
/*	border-radius: 50%;
	box-shadow: 0 1px 1px rgba(255,255,255,0.8);*/
}

.nav-arrows a:first-child{
	left: auto;
	right: 2px;
	background-position: top right;
}

.nav-arrows a:hover {
	opacity: 1;
}
.sb-slider h3{
    margin-top: 5px;
    margin-bottom: 5px;
    text-transform:inherit
}
.sb-slider .sb-description{
    padding: 5px;
    
}

